<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Students</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active">Students</li>
                    </ul>
                </div>
                <div class="col-auto text-right float-right ml-auto">

                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="card card-table">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-center mb-2 datatable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Date Of Birth</th>
                                        <th>Mobile Number</th>
                                        <th>Email</th>
                                        <th class="text-right">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var stud in Model)
                                    {
                                        <tr>
                                            <td>@stud.AdmissionNumber</td>
                                            <td>
                                                <h2 class="table-avatar">
                                                    <a href="teacher-details.html"
                                                       class="avatar avatar-sm mr-2">
                                                        <img class="avatar-img rounded-circle"
                                                             src="~/assets/img/profiles/avatar-02.jpg"
                                                             alt="User Image" />
                                                    </a>
                                                    <a asp-action="Details" asp-route-id="@stud.StudentId"> @stud.FirstName</a>

                                                </h2>
                                            </td>
                                            <td>@stud.LastName</td>
                                            <td>@stud.DateOfBirth.Value.Year</td>
                                            <td>@stud.PhoneNumber</td>
                                            <td>@stud.Email</td>
                                            <td class="text-right">
                                                <div class="actions">
                                                    <a asp-action="Edit" asp-route-id="@stud.StudentId"
                                                       class="btn btn-sm bg-success-light mr-2">
                                                        <i class="fas fa-pen"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@stud.StudentId"
                                                       class="btn btn-sm bg-danger-light">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        &copy; 2024 - SchoolManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>
</div>